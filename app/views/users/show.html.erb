<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if current_user && @repos %>
      <%= image_tag current_user.image %>
      <h2> <%= current_user.name %></h2>
      <p class = "grey"> <%= current_user.nickname %></p>
      <hr/>
      <div class="row followed-following">
        <div class="col-md-4">
          <h3> <%= Github.new(current_user).followers.count %> </h3>
          <p>followers</p>
        </div>
        <div class="col-md-4">
          <h3><%= Github.new(current_user).following.count %> </h3>
          <p>following</p>
        </div>
        <div class="col-md-4">
          <h3><%= Github.new(current_user).starred.count %></h3>
          <p>starred</p>
        </div>
      </div>
      <hr/>
    </div>
    <div class="col-md-9">
      <div class="row">
        <h4>Your Repositories</h4>
        <% @repos.each do |repo| %>
          <p><%= repo["name"] %></p>
        <% end %>
        <h4 class="contributions-header">Contributions</h4>
        <div class="col-md-4 contribution-block">
          <p>Contributions in the last year</p>
          <h3 class = "contributions"><%= Github.new(current_user).contributions_year %></h3>
          <p>Date range</p>
        </div>
        <div class="col-md-4 contribution-block">
          <p>Longest streak</p>
          <h3 class = "contributions"><%= Github.new(current_user).longest_streak %></h3>
          <p>Date range</p>
        </div>
        <div class="col-md-4 contribution-block">
          <p>Current Streak</p>
          <h3 class = "contributions"> <%= Github.new(current_user).current_streak %> </h3>
          <p>Date range</p>
        </div>
      </div>
      <h4 class="commits-header">Contribution Activity</h4>
      <!--  Commits.each do |commit| -->
      <!-- <p> Commit </p> -->
      <hr>
      <h4 class="following-header">Activity from Users You Follow</h4>
      <!--  Stuff with follower activity -->
      <% end %>
    </div>
  </div>
</div>
